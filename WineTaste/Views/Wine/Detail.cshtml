@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WineTaste.ViewModels.WineDetailViewModel

<div class="container">
    <div class="row">
        <div class="col-xs-4 item-photo">
            <img style="max-width:100%; max-height: 300px" src="https://frenhuit-s3-1.s3.us-east-2.amazonaws.com/@(Model.Wine.WineName.Replace(" ", "_")).jpg"/>
        </div>
        <div class="col-xs-5" style="border:0px solid gray">
            <h3>@Model.Wine.WineName</h3>
            <h5 style="color:#337ab7">@Model.Wine.WineYear <a href="#">@Model.Wine.WineRegion</a> Â· <small style="color:#337ab7">Rating: @Model.Wine.WineRating</small></h5>
            
            <h6 class="title-price">
                <small>Price</small>
            </h6>
            <h3 style="margin-top:0px;">$ @Model.Wine.WinePrice</h3>
        </div>

        <div class="col-xs-9">
            <ul class="menu-items">
                <li class="active">Details</li>
            </ul>
            <div style="width:100%;border-top:1px solid silver">
                <p style="padding:15px;">
                    <small>
                        @Model.Wine.WineReview
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>