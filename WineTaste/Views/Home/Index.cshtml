@* @model System.Collections.Generic.IEnumerable<WineTaste.Entities.Category> *@
@model WineTaste.ViewModels.HomeViewModel

<div class="container">
    <img src="image/home_header.jpg" class="img-fluid"/>
    <div class="row">
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="image/aqtji6meozrrxnsgwhls.jpg" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">Wine Combo 1</h5>
                <p class="card-text">See wines from France</p>
                <a href="#" class="btn btn-primary">Wine Combo 1</a>
              </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="image/112580h.jpg" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">Wine Combo 2</h5>
                <p class="card-text">See wines from Italy</p>
                <a href="#" class="btn btn-primary">Wine Combo 2</a>
              </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="image/lnsupadjgudeg6l6u8ef.jpg" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">Wine Combo 3</h5>
                <p class="card-text">See wines from USA</p>
                <a href="#" class="btn btn-primary">Wine Combo 3</a>
              </div>
            </div>
        </div>
    </div>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="image/Tile4.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="image/Tile5 (1).jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="image/Tile4b.jpg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="image/Tile6.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>